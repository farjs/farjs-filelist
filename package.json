{
  "name": "@farjs/filelist",
  "author": "viktor-podzigun",
  "version": "0.0.0",
  "license": "MIT",
  "description": "Common plugin/api/ui for FAR.js File Browser module",
  "scripts": {
    "lint": "quick-lint-js ./**/*.mjs",
    "test": "tsc && tsc -p ./test && bun test && node ./test/all.mjs",
    "format": "prettier **/*.mjs --write",
    "formatCheck": "prettier **/*.mjs --check"
  },
  "type": "module",
  "exports": {
    "./*": {
      "types": "./types/*",
      "default": "./src/*"
    }
  },
  "types": "./types/*",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/farjs/farjs-filelist.git"
  },
  "homepage": "https://github.com/farjs/farjs-filelist",
  "bugs": {
    "url": "http://github.com/farjs/farjs-filelist/issues"
  },
  "keywords": [
    "api",
    "plugin"
  ],
  "engines": {
    "node": ">=14.16",
    "bun": ">=0.8"
  },
  "dependencies": {
    "@farjs/ui": "0.9.1"
  },
  "devDependencies": {
    "@types/node": "^16.6.2",
    "@types/react": "^17.0.1",
    "@types/react-blessed": "^0.7.3",
    "@types/react-test-renderer": "^17.0.1",
    "c8": "^7.13.0",
    "mock-fn": "^1.1.0",
    "prettier": "^3.8.1",
    "quick-lint-js": "^3.0.0",
    "react-assert": "^1.2.0",
    "react-test-renderer": "^17.0.1",
    "typescript": "^5.7.3"
  }
}
